#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page.
sudo chown -R "$USER":"$USER" /etc/nginx/sites-available/
sudo sed -i "/server_name _;/c \tserver_name _;\n\tlocation = /redirect {\n\t 301 https://www.youtube.com/watch?v=QH2-TGUlwu4; \n\t}" /etc/nginx/sites-available/default
